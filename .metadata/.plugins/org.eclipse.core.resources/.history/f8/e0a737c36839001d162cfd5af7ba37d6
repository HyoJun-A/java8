package sec2;

import java.util.Scanner;

public class AccountEx {

	public static void main(String[] args) {
		Account ac = new Account();
		Scanner sc = new Scanner(System.in);
		String account_num;
		String account_holder;
		int money;
		int balance;
		boolean run = true;
		int num;
		System.out.println("---------------------------------");
		System.out.print("계좌번호를 입력해주세요 : ");
		account_num = sc.next();
		ac.account_num(account_num);
		System.out.println("---------------------------------");
		System.out.print("계좌주를 입력해주세요 : ");
		account_holder = sc.next();
		ac.account_num(account_holder);
		System.out.println("---------------------------------");
		while(run){
			System.out.print("| 1.입금 | 2.출금 | 3.잔액조회 | 4.계좌정보 보기 | 5.종료 |");
			num = sc.nextInt();
			System.out.println("---------------------------------");
			
			switch(num){
				case 1:
					System.out.print("입금액 : ");
					money = sc.nextInt();
					ac.setMoney(money);
					ac.runDeposit();
					break;
				case 2:
					System.out.println("출금액 : ");
					money = sc.nextInt();
					ac.setMoney(money);
					ac.runWithdraw();
					break;
				case 3:
					System.out.println("잔액 : "+ac.runBalance());
					break;
				case 4:
					ac.printAccount();
					break;
				case 5:
					System.out.println("종료합니다.");
					run = false;
				default:
					System.out.println("번호를 다시 입력해주세요");
			}
		}
	}

}
