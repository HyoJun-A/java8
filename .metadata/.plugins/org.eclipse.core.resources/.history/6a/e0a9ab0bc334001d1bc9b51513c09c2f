package sec4;

public class Ex4 {
	public static void main(String[] args) {
		int num1, num2;		//랜덤값 1, 2
		int sum = 0;		//합계
		boolean result = true;	//while 조건
		
		while(result) {
			num1 = (int) (Math.random()*6);	//0~1까지의 아무 수
			num2 = (int) (Math.random()*6);
			sum = num1 + num2;
			if(num1 == 0 || num2 == 0){
				continue;
			} else if(sum == 5){
				System.out.println("( " + num1 + ", " + num2 + " )");
				result = false;
			}
			
		}
	}

}
