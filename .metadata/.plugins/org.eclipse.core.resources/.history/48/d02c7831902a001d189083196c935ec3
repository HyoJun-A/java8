package sec2;

public class Cast1 {

	public static void main(String[] args) {
		int a = 1004, b;	//4byte
		short c, d;			//2byte
		long e, f;			
		b = a;
		c = 500;
		a = c;	//c의 값이 short 타입이였지만 a에 대입하면서 int 타입으로 바뀐다, short -> int : 자동 형 변환 (auto casting)
		d = (short) b;	// (type) 변수 : 형 변환
	}

}
