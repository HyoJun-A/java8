package sec4;

public class Ex6 {
	public static void main(String[] args) {
		for(int i = 1; i< 6; i++){
			for(int j = 0; j < i; j++){
				System.out.print("*");
			}
			System.out.print("\n");
		}
		
		System.out.println("*************************");
		
		for(int i = 6; i < 0; i--){
			for(int j = 0; j > i; i--){
				System.out.println("*");
			}
		}
	}

}
